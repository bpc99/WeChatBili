@import '../../assets/fontAwesome/fontAwesome.wxss';
.header_title{
  display: flex;
  padding: 10rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  z-index: 5;
}

/* logo */
.header_logo{
  display: block;
  width: 120rpx;
}
.header_logo > image{
  position: relative;
  display: block;
  width: 100%;
  height: 100%;
  margin: auto;
  color: transparent;
}

/* 搜索 */
.header_search{
  margin: 10rpx 20rpx 10rpx auto;
  padding: 0 20rpx;
  display: block;
  width: 300rpx;
  background: #f4f4f4;
  color: #999;
  border-radius: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}
.header_search_icon{
  margin: 0 10rpx 0 0;
  font-weight: 300;
}
.header_search_content{
  display: inline-block;
  width: 220rpx;
  vertical-align: top;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 用户头像 */
.header_user{
  margin: 10rpx 20rpx 10rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  width: 60rpx;
}
.header_user > image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 下载按钮 */
.header_download{
  font-size: 30rpx;
  background-color: #fb7299;
  color: #fff;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  margin: 10rpx 0;
  height: 60rpx;
}