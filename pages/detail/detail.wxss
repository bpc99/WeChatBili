/* pages/detail/detail.wxss */
@import '../../assets/fontAwesome/fontAwesome.wxss';
.main{
	color: #666;
}

.video_info_box{
	position: relative;
	left: 0;
	top: 0;
}

/*视频*/
.video_box{
	height: 400rpx;
	position: relative;
    background-color: #fff;
    z-index: 100;
}
.video_box video{
	width: 100%;
	height: 100%;
}

/*视频Tab*/
.video_tab{
	width: 100%;
	display: flex;
	background-color: #fff;
	justify-content: flex-start;
	align-items: center;
	padding: 0 10rpx;
}
.video_tab > .active{
	color: #fb7299;
	border-bottom: 2px solid #fb7299;
}
.video_tab_item{
	font-size: 25rpx;
	padding: 20rpx 10rpx;
}
.video_tab_Barrage{
	font-size: 20rpx;
	padding: 20rpx 5rpx;
	margin-left: auto;
}

/*视频信息*/
.video_info_box .video_info{
	position: relative;
    transform: translateZ(0);
    transition: all .5s;
	background-color: rgba(245,245,245);
}

/*视频用户信息*/
.video_info_box .video_author{
	width: 100%;
	height: 120rpx;
	display: flex;
	position: relative;
	align-items: center;
	justify-content: flex-start;
	padding: 20rpx;
}
.video_info_box .video_author > image{
	width: 80rpx;
	height: 100%;
	border-radius: 50%;
}
.video_info_box .video_author > .edit{
	display: flex;
	flex-direction: column;
	height: 100%;
	justify-content: center;
	margin-left: 20rpx;
}
.video_info_box .video_author .edit .edit_userName{
	color: #fb7299;
	font-size: 25rpx;
}
.video_info_box .video_author .edit .edit_userfollow{
	color: #8E8E8E;
	margin-top: 10rpx;
	font-size: 20rpx;
}
.video_info_box .video_author navigator{
	margin-left: auto;
	padding: 10rpx 20rpx;
	background-color: #fb7299;
	font-size: 20rpx;
	color: #fff;
	border-radius: 5rpx;
}
.video_info_box .video_author navigator .fa{
	margin-right: 10rpx;
}

/*视频标题*/
.video_flex{
	width: 100%;
	padding: 0 20rpx;
	display: flex;
	justify-content: space-between;
	align-items: stretch;
	font-size: 30rpx;
}
.video_title{
	font-style: normal;
    color: #212121;
    overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.video_popular{
	margin: 5rpx 10rpx 5rpx 0;
	padding: 5rpx;
	color: #fb7299;
	background-color: rgba(220, 220, 220, .6);
	display: flex;
	border-radius: 15rpx;
	font-size: 20rpx;
	align-items: center;
	justify-content: center;
}
.video_popular_icon{
	width: 150rpx;
}
.video_popular_icon > image{
	width: 30rpx;
	margin-left: -7rpx;
}
.video_popular_count{
	width: 120rpx;
}
.video_icon{
	margin: 0 0 0 10rpx;
}

/*视频详情*/
.video_detail{
	position: relative;
    color: #999;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 25rpx;
	padding: 10rpx 20rpx;
}
.video_detail .fa{
	margin-right: 10rpx;
}
.video_detail_icon{
	color: #999;
    margin-right: 30rpx;
}

/*操作*/
.video_operation{
	position: relative;
	padding: 30rpx 10rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
	color: #999;
	border-bottom: 1px solid #e5e5e5;
}
.video_operationIcon{
	flex: 1;
	display: flex;
	align-items: center;
	flex-direction: column;
	justify-content: center;
}
.video_operationIcon > .fa{
	font-weight: blod;
	font-size: 40rpx;
	margin-bottom: 10rpx;
}
.video_operationIcon > .play_count{
	font-size: 20rpx;
}

/*视频Tab*/
.video_tags{
	padding: 20rpx 0;
	color: #000;
}
.video_tags_item{
	font-size: 20rpx;
	border-radius: 20rpx;
	margin: 10rpx 20rpx;
	display: inline-block;
	padding: 7rpx 20rpx;
	background-color: rgba(220, 220, 220, .6);
}

/*推荐视频列表*/
.video_list{
	padding: 10rpx 20rpx;
	width: 100%;
}
.video_list > .video_list_item{
	display: flex;
	padding: 15rpx 0;
	height: 150rpx;
	justify-content: center;
	border-bottom: 1rpx solid #e5e5e5;
}
.video_list_item > image{
	flex: 3;
	height: 100%;
}
.video_list_count{
	flex: 7;
	display: flex;
	color: #ADADAD;
	font-size: 20rpx;
	padding: 0 20rpx;
	flex-direction: column;
	justify-content: space-between;
}
.video_list_item .video_list_Title{
	color: #000;
	overflow: hidden;
	font-size: 25rpx;
	margin-top: -5rpx;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	text-overflow: ellipsis;
	-webkit-box-orient: vertical;
}
.video_list_footer{
	height: 30rpx;
	margin: 5rpx 0;
}
.video_list_footer > .video_list_content{
	font-size: 20rpx;
	height: 25rpx;
	line-height: 25rpx;
    vertical-align: middle;
}
.video_list_footer > .fa{
	margin-right: 10rpx;
}
.gray{
	color: #ADADAD;
	border-color: #ADADAD;
}